    <!-- Demo Data & Scripts (no external APIs) -->
    <script>
      document.getElementById('year').textContent = new Date().getFullYear();

      // Demo market rows
      const rows = [
        { s: 'BTCUSDT', p: 5213400, ch: +1.24 },
        { s: 'ETHUSDT', p: 288400, ch: -0.52 },
        { s: 'NIFTY', p: 24785.55, ch: +0.31 },
        { s: 'RELIANCE', p: 2985.2, ch: +0.12 },
        { s: 'TCS', p: 4112.9, ch: -0.18 },
        { s: 'AAPL', p: 229.64, ch: +0.44 },
        { s: 'TSLA', p: 242.11, ch: -1.02 },
      ];

      const tbody = document.getElementById('market-body');
      tbody.innerHTML = rows.map(r => `
        <tr class="hover:bg-white/5">
          <td class="p-3">${r.s}</td>
          <td class="p-3 text-right">${Intl.NumberFormat('en-IN', { maximumFractionDigits: 2 }).format(r.p)}</td>
          <td class="p-3 text-right ${r.ch>=0 ? 'text-emerald-400' : 'text-rose-400'}">${r.ch>0?'+':''}${r.ch.toFixed(2)}%</td>
        </tr>
      `).join('');

      // Ticker items (duplicated sequence for infinite loop)
      const tickerStrip = document.querySelector('.ticker > div');
      const makeChip = (r) => `
        <span class="inline-flex items-center gap-2 text-sm">
          <span class="text-white/60">${r.s}</span>
          <span class="font-semibold">${Intl.NumberFormat('en-IN', { maximumFractionDigits: 2 }).format(r.p)}</span>
          <span class="${r.ch>=0 ? 'text-emerald-400' : 'text-rose-400'}">${r.ch>0?'+':''}${r.ch.toFixed(2)}%</span>
        </span>`;
      const loop = [...rows, ...rows, ...rows, ...rows].map(makeChip).join('<span class="opacity-30">|</span>');
      tickerStrip.innerHTML = loop;

      // Demo OHLC-like line chart
      const ctx = document.getElementById('priceChart');
      const labels = Array.from({length: 48}, (_,i)=> i+1);
      const base = 5200000;
      let price = base;
      const data = labels.map(()=> price += (Math.random()-0.45)*8000);
      const open = data[0], high = Math.max(...data), low = Math.min(...data);
      document.getElementById('open').textContent = Intl.NumberFormat('en-IN', { maximumFractionDigits: 0 }).format(open);
      document.getElementById('high').textContent = Intl.NumberFormat('en-IN', { maximumFractionDigits: 0 }).format(high);
      document.getElementById('low').textContent = Intl.NumberFormat('en-IN', { maximumFractionDigits: 0 }).format(low);

      new Chart(ctx, {
        type: 'line',
        data: {
          labels,
          datasets: [{
            label: 'Price',
            data,
            tension: 0.35,
            borderWidth: 2,
            pointRadius: 0,
          }]
        },
        options: {
          animation: false,
          responsive: true,
          maintainAspectRatio: false,
          elements: { line: { borderColor: '#22d3ee' } },
          scales: {
            x: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: 'rgba(255,255,255,0.6)' } },
            y: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: 'rgba(255,255,255,0.6)' } },
          },
          plugins: { legend: { display: false } }
        }
      });

      // Estimate cost calc (simple demo)
      const qtyInput = document.querySelector('input[type=number]');
      const estCost = document.getElementById('estCost');
      const last = rows[0].p; // BTC price demo
      const updateCost = () => {
        const q = parseFloat(qtyInput.value || '0');
        estCost.textContent = '₹' + Intl.NumberFormat('en-IN', { maximumFractionDigits: 2 }).format(q * last);
      };
      qtyInput.addEventListener('input', updateCost);
      updateCost();
    </script>
